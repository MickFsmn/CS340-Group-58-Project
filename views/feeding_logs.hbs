<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>

<h1>View Feeding Logs</h1>

<table class="SELECT-table">
    <tr>
        <th>feeding_id</th>
        <th>bird_id</th>
        <th>feed_id</th>
        <th>amount</th>
        <th>date_time</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    {{#each feeding_logs}}
    <tr>
        <td>{{this.feeding_id}}</td>
        <td>{{this.bird_id}}</td>
        <td>{{this.feed_id}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.date_time}}</td>
        <td><a href="/feeding_logs_update/{{this.feeding_id}}" class="update-button">update</a></td>
    <td>
      <form action="/feeding_logs_delete/{{this.feeding_id}}" method="POST"
        onsubmit="return confirm('Delete this feeding log?);">
        <button type="submit" class="delete-button">X</button>
      </form>
    </td>
    </tr>
    {{/each}}
</table>

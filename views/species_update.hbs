<h1>Update Species ID: {{species.species_id}}</h1>

<form action="/species_update/{{species.species_id}}" method="POST">
  <label>Common Name:</label><br>
  <input type="text" name="common_name" value="{{species.common_name}}" required><br>

  <label>Scientific Name:</label><br>
  <input type="text" name="scientific_name" value="{{species.scientific_name}}" required><br>

  <label>Diet Type:</label><br>
  <select name="diet_type">
    <option value="insectivore" {{#if (eq species.diet_type "insectivore")}}selected{{/if}}>Insectivore</option>
    <option value="granivore" {{#if (eq species.diet_type "granivore")}}selected{{/if}}>Granivore</option>
    <option value="omnivore" {{#if (eq species.diet_type "omnivore")}}selected{{/if}}>Omnivore</option>
    <option value="carnivore" {{#if (eq species.diet_type "carnivore")}}selected{{/if}}>Carnivore</option>
    <option value="herbivore" {{#if (eq species.diet_type "herbivore")}}selected{{/if}}>Herbivore</option>
  </select><br><br>

  <input type="submit" value="Update Species">
</form>
